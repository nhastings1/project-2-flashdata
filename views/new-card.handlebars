<div class="m-4 p-4">
  <div class="col-md-6">
    <h2>Create a New Card</h2>

    <form class="form p-2 new-card">
      <div class="form-group p-2">
        <label for="question">Question</label>
        <input class="questions-input" type="text" id="question" />
      </div>
      <div class="form-group p-2">
        <label for="answer">Answer</label>
        <input class="answer-input" type="text" id="answer" />
      </div>
      <div class="form-group p-2">
        <label for="id">Enter the cards collection id number it belongs to: </label>
        <input class="id-input" type="text" id="id" />
      </div>
      <div class="form-group p-2">
        <button class="button is-success" type="submit">Create Card</button>
      </div>
    </form>
  </div>
