
  <div class="col-md-6">
    <h2>Create a New Card</h2>

    <form class="form p-2 new-card">
      <div class="form-group p-2">
        <label for="question">Question</label>
        <input class="questions-input" type="text" id="question" />
      </div>
      <div class="form-group p-2">
        <label for="answer">Answer</label>
        <input class="answer-input" type="text" id="answer" />
      </div>
      <div class="form-group p-2">
        <div class='select'>
          <select id="id">
            {{#each collections as |collection|}}
              <option
                value={{collection.id}}
              >{{collection.name}}</option>
            {{/each}}
          </select>
        </div>

        </div>
      </div>
      <div class="form-group p-2">
        <button class="button is-success" type="submit">Create Card</button>
      </div>
    </form>
  </div>

  <script src='./assets/js/createCard.js'></script>
