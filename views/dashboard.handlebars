<h2>Your dashboard</h2>
<p>Welcome {{name}}</p>
<p>Viewing all flashcards</p>
<!-- Loop over each object in the projects array -->
{{#each cards as |card| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/card/{{card.id}}">{{card.name}}</a>
    </h2>
    <p>
      {{card.description}}
    </p>
    </p>
    <p>Created by {{card.name}} on {{format_date card.date_created}}</p>
  </div>
</div>
{{/each}}

<a href="/new-card">Create a New Flash Card</a>